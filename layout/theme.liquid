<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ page_title }} – Tek Matrix</title>

  <!-- Shopify Core -->
  {{ content_for_header }}

  <!-- Fonts -->
  <style>
    {{ settings.heading_font | font_face }}
    {{ settings.body_font | font_face }}
  </style>

  <!-- Global Styles -->
  <link rel="stylesheet" href="{{ 'style-tek.css' | asset_url }}">

  <!-- Dynamic Theme Variables -->
  <style>
    :root {
      --primary-color: {{ settings.primary_color }};
      --secondary-color: {{ settings.secondary_color }};
      --accent-color: {{ settings.accent_color }};
      --heading-color: {{ settings.heading_color }};
      --background-color: {{ settings.background_color }};
      --text-color: {{ settings.text_color }};
      --heading-font: {{ settings.heading_font.family }};
      --body-font: {{ settings.body_font.family }};
    }

    body.krishposa-body {
      background-color: var(--background-color);
      color: var(--text-color);
      font-family: var(--body-font, 'Inter'), sans-serif;
    }

    h1, h2, h3, .krishposa-logo {
      font-family: var(--heading-font, 'Archivo Black'), sans-serif;
      color: var(--heading-color);
    }
  </style>

  <link rel="icon" href="{{ 'favicon.png' | asset_url }}" type="image/png">
</head>
<body class="krishposa-body">

  <!-- Header -->
  <header class="krishposa-header">
    <div class="krishposa-header-inner">
      {% if settings.logo %}
        <a href="/" class="krishposa-logo">
          <img src="{{ settings.logo | img_url: '200x' }}" alt="Tek Matrix Logo" class="site-logo">
        </a>
      {% else %}
        <a href="/" class="krishposa-logo">TEK MATRIX</a>
      {% endif %}
      <nav class="krishposa-nav">
        <a href="/collections/all">Shop</a>
        <a href="/pages/about">About</a>
        <a href="/pages/contact">Contact</a>
      </nav>
    </div>
  </header>

  <!-- Main Content -->
  <main class="krishposa-main">
    {{ content_for_layout }}
  </main>

  <!-- Footer -->
  <footer class="krishposa-footer">
    <p>© {{ 'now' | date: '%Y' }} Tek Matrix LLC — All Rights Reserved.</p>
    <p>Operated by Tek Matrix LLC • Powering the Krish Posa™ brand</p>
    <p>
      <a href="/policies/privacy-policy">Privacy Policy</a> • 
      <a href="/policies/terms-of-service">Terms</a>
    </p>
  </footer>

  <!-- Scripts -->
  <script src="{{ 'countdown.js' | asset_url }}"></script>
  {{ content_for_footer }}
</body>
</html>