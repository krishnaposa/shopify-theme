<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ page_title }} – Krish Posa</title>

  <!-- Shopify Core -->
  {{ content_for_header }}

  <!-- Dynamic Shopify Fonts -->
  {{ settings.heading_font | font_face }}
  {{ settings.body_font | font_face }}

  <!-- Global Styles -->
  <link rel="stylesheet" href="{{ 'style-dark-gym.css' | asset_url }}">

  <!-- Dynamic Theme Colors + Fonts -->
  <style>
    :root {
      /* Dynamic Colors */
      --primary-color: {{ settings.primary_color }};
      --background-color: {{ settings.background_color }};
      --text-color: {{ settings.text_color }};

      /* Dynamic Fonts */
      --heading-font-family: {{ settings.heading_font.family }};
      --body-font-family: {{ settings.body_font.family }};
    }

    body.krishposa-body {
      background-color: var(--background-color);
      color: var(--text-color);
      font-family: var(--body-font-family, 'Inter'), sans-serif;
    }

    h1, h2, h3, .krishposa-logo {
      font-family: var(--heading-font-family, 'Archivo Black'), sans-serif;
    }

    a, .krishposa-btn {
      color: var(--primary-color);
    }

    .krishposa-btn {
      background: var(--primary-color);
      color: #fff;
    }

    .krishposa-btn:hover {
      background: #c00;
    }

    .krishposa-header {
      background-color: #000;
      border-bottom: 2px solid var(--primary-color);
    }

    .krishposa-footer {
      background-color: #000;
      color: #aaa;
    }

    .krishposa-footer a {
      color: var(--primary-color);
    }
  </style>

  <!-- Favicon -->
  <link rel="icon" href="{{ 'favicon.png' | asset_url }}" type="image/png">
</head>

<body class="krishposa-body">

  <!-- Header -->
  <header class="krishposa-header">
    <div class="krishposa-header-inner">
      {% if settings.logo %}
        <a href="/" class="krishposa-logo">
          <img src="{{ settings.logo | img_url: '200x' }}" alt="Krish Posa Logo">
        </a>
      {% else %}
        <a href="/" class="krishposa-logo">KRISH POSA</a>
      {% endif %}

      <nav class="krishposa-nav">
        <a href="/collections/all">Shop</a>
        <a href="/pages/about">About</a>
        <a href="/pages/contact">Contact</a>
      </nav>
    </div>
  </header>

  <!-- Main Content -->
  <main class="krishposa-main">
    {{ content_for_layout }}
  </main>

  <!-- Footer -->
  <footer class="krishposa-footer">
    <p>{{ settings.footer_text }}</p>
    <p>
      <a href="/policies/privacy-policy">Privacy Policy</a> • 
      <a href="/policies/terms-of-service">Terms</a>
    </p>
  </footer>

  <!-- Countdown & Global Scripts -->
  <script src="{{ 'countdown.js' | asset_url }}"></script>
  {{ content_for_footer }}
</body>
</html>