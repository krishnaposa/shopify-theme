<section class="krishposa-hero-banner">
  <div class="hero-banner-inner">
    {% if section.settings.hero_image %}
      <div class="hero-banner-image">
        <img 
          src="{{ section.settings.hero_image | image_url: width: 1600 }}" 
          alt="{{ section.settings.heading | escape }}" 
          loading="lazy">
      </div>
    {% endif %}

    <div class="hero-banner-overlay"></div>

    <div class="hero-banner-content container">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="krishposa-btn">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Train Harder. Grip Smarter."
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Performance gear built for every rep."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    }
  ],
  "presets": [
    { "name": "Hero Banner", "category": "Hero" }
  ]
}
{% endschema %}