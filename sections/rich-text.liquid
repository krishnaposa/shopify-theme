<section class="section rich-text">
  <div class="container">
    <h2>{{ section.settings.heading }}</h2>
    <div class="rich-text-content">{{ section.settings.content }}</div>
  </div>
</section>

{% schema %}
{
  "name": "Rich Text",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Section Heading" },
    { "type": "html", "id": "content", "label": "Content", "default": "<p>Write your content here.</p>" }
  ]
}
{% endschema %}