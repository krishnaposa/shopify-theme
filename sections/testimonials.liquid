<section class="krishposa-testimonials">
  <div class="testimonial-container">
    <h2 class="testimonial-heading">{{ section.settings.heading }}</h2>

    <div class="testimonial-grid">
      {% for block in section.blocks %}
        <div class="testimonial-item">
          <p class="quote">“{{ block.settings.quote }}”</p>
          <p class="author">— {{ block.settings.author }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "What our customers are saying"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        { "type": "text", "id": "quote", "label": "Quote", "default": "These grip pads changed my workouts forever!" },
        { "type": "text", "id": "author", "label": "Author", "default": "Alex M." }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    { "name": "Testimonials", "category": "Social Proof" }
  ]
}
{% endschema %}