{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "What our customers are saying"
    },
    {
      "type": "testimonial",
      "id": "testimonial_1",
      "label": "Testimonial 1",
      "default": {
        "quote": "I’ve never had a better gym accessory — no calluses and better grip!",
        "author": "Alex M.",
        "avatar": ""
      }
    },
    {
      "type": "testimonial",
      "id": "testimonial_2",
      "label": "Testimonial 2",
      "default": {
        "quote": "These grip pads changed my deadlift game.",
        "author": "Sara T.",
        "avatar": ""
      }
    },
    {
      "type": "testimonial",
      "id": "testimonial_3",
      "label": "Testimonial 3",
      "default": {
        "quote": "Solid build, comfy fit, and fast shipping.",
        "author": "John D.",
        "avatar": ""
      }
    }
  ],
  "presets": [
    { "name": "Testimonials", "category": "Social Proof" }
  ]
}
{% endschema %}

<section class="krishposa-testimonials">
  <h2>{{ section.settings.heading }}</h2>
  <div class="testimonial-grid">
    {% for i in (1..3) %}
      {% assign t = section.settings["testimonial_" | append: i] %}
      <div class="testimonial-item">
        <p class="quote">“{{ t.quote }}”</p>
        <p class="author">— {{ t.author }}</p>
      </div>
    {% endfor %}
  </div>
</section>