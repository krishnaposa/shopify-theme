<section class="section home-collections">
  <div class="container">
    <h2 class="collections-heading">{{ section.settings.heading }}</h2>

    <div class="collections-grid">
      {% for block in section.blocks %}
        {% assign collection = collections[block.settings.collection] %}
        {% if collection %}
          <div class="collection-item">
            <a href="{{ collection.url }}">
              {% if collection.image %}
                <img src="{{ collection.image | image_url: width: 600 }}" alt="{{ collection.title }}">
              {% else %}
                <img src="{{ 'placeholder-image.png' | asset_url }}" alt="{{ collection.title }}">
              {% endif %}
              <h3>{{ collection.title }}</h3>
              {% if collection.description != blank %}
                <p class="collection-desc">{{ collection.description | strip_html | truncate: 100 }}</p>
              {% endif %}
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Home Collections Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop All Collections"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Home Collections Grid",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}